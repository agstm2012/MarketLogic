<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:clickable="false" android:gravity="left">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Кол-во:"
            android:id="@+id/textView1" android:layout_alignParentLeft="true" android:layout_marginLeft="55dp"
            android:layout_below="@+id/textView" android:layout_marginTop="10dp" android:gravity="left"/>
    <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/change" android:layout_toRightOf="@+id/textView1"
            android:layout_alignTop="@+id/textView1" android:layout_alignParentRight="false"
            android:layout_marginLeft="35dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/status" android:layout_alignLeft="@+id/textView1" android:layout_below="@+id/change"
            android:layout_marginTop="10dp" android:text=" "/>
    <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/cancel_dialog" android:layout_alignParentLeft="true" android:layout_marginLeft="40dp"
            android:layout_below="@+id/status" android:layout_marginTop="10dp"/>
    <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:id="@+id/edit_dialog" android:layout_alignParentLeft="false"
            android:layout_alignParentTop="false"
            android:layout_alignTop="@+id/cancel_dialog" android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"/>
</RelativeLayout>