<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        >

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:id="@+id/name"
            android:gravity="center|top"
            android:layout_centerHorizontal="true" android:layout_alignParentTop="true" android:layout_marginTop="5dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/ic_launcher"
            android:layout_below="@+id/name" android:layout_marginLeft="15dp" android:layout_marginTop="5dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:id="@+id/description" android:layout_alignParentLeft="true" android:layout_below="@+id/imageView"
            android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_marginTop="20dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categories"
            android:id="@+id/categories" android:layout_alignParentLeft="true" android:layout_marginLeft="10dp"
            android:layout_below="@+id/description" android:layout_marginTop="5dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Numbers:"
            android:id="@+id/label1" android:layout_toRightOf="@+id/categories"
            android:layout_alignTop="@+id/imageView" android:layout_marginLeft="25dp" android:layout_marginTop="0dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="value"
            android:id="@+id/number" android:layout_toRightOf="@+id/label1"
            android:layout_alignTop="@+id/imageView" android:layout_marginLeft="5dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price:"
            android:id="@+id/label2" android:layout_toRightOf="@+id/categories"
            android:layout_below="@+id/label1" android:layout_marginTop="10dp" android:layout_marginLeft="25dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="value"
            android:id="@+id/price" android:layout_alignTop="@+id/label2"
            android:layout_toRightOf="@+id/label2" android:layout_marginLeft="5dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button"
            android:id="@+id/button" android:layout_alignParentLeft="false"
            android:layout_alignTop="@+id/categories" android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
</RelativeLayout>